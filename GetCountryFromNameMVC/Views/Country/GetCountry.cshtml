@model CountryResponse
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Country for Name</title>
</head>
<body>
<h1>Country for Name</h1>
<form method="get" action="@Url.Action("GetCountry", "Country")">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name"/>
    <button type="submit">Submit</button>
</form>
@if (Model.Name != null)
{
    <h2>Results for @Model</h2>
    @if (Model.Name!= null && Model.Country.Count > 0)
    {
        <ul>
            @foreach (var country in Model.Country)
            {
                <li>@country.CountryId - Probability: @country.Probability</li>
            }
        </ul>
    }
    else
    {
        <p>No countries found for that name.</p>
    }
}
</body>
</html>